
<!--books一覧 -->
<table class="table table-hover table-inverse">
　<% if @range == '1' %>
  <h2>Users search for '<%= params[:word] %>'</h2>
  <thead>
     <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
     </tr>
   </thead>

   <tbody>
    <% @user.each do |user| %>
     <tr>
      <td>
        <%= attachment_image_tag user, :profile_image, :fill, 60, 60, class:"pull-left profile-thumb", fallback: "no_image.jpg" %>
      </td>
      <td><%= user.name %></td>
      <td><%= link_to "Show", user_path(user) %></td>
     </tr>
    <% end %>
   </tbody>

   <% else %>

    <h2>Books search for '<%= params[:word] %>'</h2>
    <thead>
      <tr>
       <th></th>
       <th>Title</th>
       <th>Opinion</th>
       <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
       <% @book.each do |book| %>
       <tr>
        <td>
         <%= link_to user_path(book.user) do %>
         <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, class:"pull-left profile-thumb", fallback: "no_image.jpg" %>
         <% end %>
        </td>
        <td>
         <%= link_to book.title, book_path(book) %>
        </td>
        <td><%= book.body %></td>
       </tr>
       <% end %>
    </tbody>
   <% end %>
 </table>