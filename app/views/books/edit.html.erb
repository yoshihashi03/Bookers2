<p><%= notice %></p>
<div class="container">
	<div class="row">
		<div class="col-md-offset-3 col-md-6">
			<h1>Editing Book</h1>
			<%= form_for(@book) do |f| %>

			<% if @book.errors.any? %>
  				<div id="error_explanation" class="alert alert-danger">
  				<h4><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h4>
    			<ul>
      				<% @book.errors.full_messages.each do |message| %>
        			<li><%= message %></li>
      				<% end %>
    			</ul>
  				</div>
			<% end %>

			<p class="field row">
				<%= f.label :title %></br>
				<%= f.text_field :title, class:"col-xs-12" %>
			</p>
			<p class="field row">
			    <%= f.label :opinion %></br>
				<%= f.text_area :body, class:"col-xs-12" %>
			</p>
			<p class="actions row">
				<%= f.submit 'Update Book', class:"btn btn-primary col-xs-12" %>
			</p>
			<% end %>
		</div>
	</div>
</div>