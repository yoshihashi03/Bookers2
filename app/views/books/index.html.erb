<p><%= notice %></p>
<div class="container">
	<div class="row">
		<%= render 'users/list', {user:@user, book:@book} %>


		<div class="col-xs-9">
		<h1>book index</h1>
		<%= link_to "Edit", edit_book_path(@books), class:"btn  btn-success " %>
		<table class="table">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th colspan="3"></th>
				</tr>
			</thead>
			<tbody>
				<% @books.each do |book| %>
				<tr>
					<td>
						<%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, class:"pull-left profile-thumb", fallback: "no_image.jpg" %>
					</td>
					<td><%= link_to book.title, book_path(book) %></td>
					<td><%= book.body %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
		</div>
	</div>
</div>