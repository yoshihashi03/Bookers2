<p><%= notice %></p>
<div class="container">
	<div class="row">
		<%= render 'users/list', {user:@user, book:@book} %>

		<div class="col-xs-9">
		<h2>Book detail</h2>
			<table class="table  table-hover table-inverse">
					<tr>
					<td>
						<%= link_to user_path(@user) do %>
						<%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %><br>
						<%= @book.user.name %>
						<% end %>
					</td>
					<td><%= link_to @book.title, book_path(@book) %></td>
					<td><%= @book.body %></td>

					<td id="favorite-<%= @book %>">

						<%= render 'books/favorite', {book:@book} %>

					</td>

						<td>コメント数: <%= @book.book_comments.count %></td>
					</tr>
			</table>
			<div class="comment-list bt style-2" id="comments">
				<div id="comment-<%= @book %>">
			  		<%= render 'books/comment', {book:@book, book_comment:@book_comment} %>
				</div>
			</div>
	</div>
</div>