<p><%= notice %></p>
<div class="container">
	<div class="row">
		<%= render 'users/list', {user:@user, book:@book} %>

		<div class="col-xs-9">
		<h2>Book detail</h2>
			<table class="table  table-hover table-inverse">
					<tr>
					<td>
						<%= link_to user_path(@user) do %>
						<%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %><br>
						<%= @book.user.name %>
						<% end %>
					</td>
					<td><%= link_to @book.title, book_path(@book) %></td>
					<td><%= @book.body %></td>

					<% if @book.favorited_by?(current_user) %>
						<td>
						  	<%= link_to book_favorites_path(@book), method: :delete do %>
						    	<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
						    	<%= @book.favorites.count %>
						  	<% end %>
						</td>
						<% else %>
						<td>
						  	<%= link_to book_favorites_path(@book), method: :post do %>
						    	<i class="fa fa-heart-o" aria-hidden="true"></i>
						    <%= @book.favorites.count %>
							<% end %>
						</td>
					<% end %>

						<td>コメント数: <%= @book.book_comments.count %></td>
					</tr>
			</table>
			<div class="comment-list bt style-2" id="comments">

  			<ol>
			  <% @book.book_comments.each do |book_comment| %>
			    <li class="comment">
			      <div class="comment-body bb">
			        <div class="comment-avatar">
			            <%= attachment_image_tag book_comment.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %><br>
			            <%= book_comment.user.name %>
			        </div>
			        <div class="comment-entry">
			        	<%= book_comment.comment %>
			        	<% if book_comment.user == current_user %>
			        		<div>
			        			<%= link_to "Destroy", book_book_comment_path(book_comment.book,book_comment), method: :delete, class:"btn btn-danger pull-right" %>
			        		</div>
			        	<% end %>
			        </div>
			      </div>
			    </li>
			  <% end %>
			</ol>
			<%= form_for [@book, @book_comment] do |f| %>
				  <div class="row">
				      <%= f.text_area :comment, rows:'3', class: "form-control" %>
				  </div>
				  	<%= f.submit "送信", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
			<% end %>

		</div>
	</div>
</div>