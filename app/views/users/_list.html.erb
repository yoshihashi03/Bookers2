<div class="col-xs-3">

			<h2>User info</h2>
				<%= attachment_image_tag user, :profile_image, :fill, 100, 100, class:"pull-left profile-thumb", fallback: "no_image.jpg" %>
				<table class="table">
					<tbody>
						<tr></tr>
						<tr>
							<th>name</th>
							<th><%= user.name %></th>
						</tr>
						<tr>
							<th>introduction</th>
							<th><%= user.introduction %></th>
						</tr>
					</tbody>
				</table>

			<div class="row">
			<% if user.id == current_user.id %>
				<p class="actions">
					<%= link_to "", edit_user_path(user), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
				</p>
			<% end %>
			</div>

			<h2>New book</h2>

			<%= form_for(Book.new) do |f| %>
				<div class="field row">
					<p class="new-book-title">
					<%= f.label :title %><br>
					<%= f.text_field :title, class:"col-xs-12" %>
				    </p>
				    <p class="new-book-body">
					<%= f.label :opinion %><br>
					<%= f.text_area :body, class:"col-xs-12" %>
				    </p>
					<p class="actions">
					<%= f.submit 'Create Book', class:"col-xs-12 btn btn-primary" %>
					</p>
				</div>
			<% end %>
	</div>
