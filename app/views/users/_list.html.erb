<div class="col-xs-3">
			<p><%= notice %></p>
			<h2>User info</h2>
				<%= attachment_image_tag user, :profile_image, :fill, 100, 100, class:"pull-left profile-thumb", fallback: "no_image.jpg" %>
				<table class="table">
					<tbody>
						<tr></tr>
						<tr>
							<th>name</th>
							<th><%= user.name %></th>
						</tr>
						<tr>
							<th>introduction</th>
							<th><%= user.introduction %></th>
						</tr>
					</tbody>
				</table>

			<div class="row">
			<% if user.id == current_user.id %>
				<p class="actions">
					<%= link_to "", edit_user_path(user), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
				</p>
			<% end %>
			</div>

			<h2>New book</h2>
			<% if book.errors.any? %>
  				<div id="error_explanation" class="alert alert-danger">
  				<h4><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h4>
    			<ul>
      				<% book.errors.full_messages.each do |message| %>
        			<li><%= message %></li>
      				<% end %>
    			</ul>
  				</div>
			<% end %>

			<%= form_for(book) do |f| %>
				<div class="field row">
				<p class="new-book-title">
				<%= f.label :title %></br>
				<%= f.text_field :title %>
			    </p>
			    <p class="new-book-body">
				<%= f.label :opinion %></br>
				<%= f.text_area :body %>
			    </p>
				</div>
				<div class="action-row">
				<p class="actions">
				<%= f.submit 'Create Book' %>
				</p>
				</div>
			<% end %>
	</div>