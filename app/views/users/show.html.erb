<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<h2>User info</h2>
				<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class:"img-circle pull-left profile-thumb", fallback: "no_image.jpg" %>

			<h3>@user</h3>
		</div>
	</div>
<p>mypage/user_path</p>
<div class="row">
<% if @user.id == current_user.id %>
	<p><%= link_to "", edit_user_path(@user), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %></p>
<% end %>
</div>
</div>
