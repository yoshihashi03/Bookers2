<div class="container">
	<div class="row">
		<%= render 'users/list', {user:@user, book:@book} %>

	<div class="col-xs-9">
		<h2>Books</h2>
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th colspan="3"></th>
				</tr>
			</thead>
			<tbody>
				<% @user.books.each do |book| %>
				<tr>
					<td>
						<%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, class:"pull-left profile-thumb", fallback: "no_image.jpg" %>
					</td>
					<td><%= book.title %></td>
					<td><%= book.body %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
</div>

