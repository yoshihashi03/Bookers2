<h1>Follow Users</h1>

<% if @users.count > 0 %>
	<table class="table">
			<thead>
				<tr>
					<th>image</th>
					<th>name</th>
					<th></th>
					<th colspan="3"></th>
				</tr>
			</thead>
			<tbody>
				<% @users.each do |user| %>
				<tr>
					<td>
						<%= attachment_image_tag user, :profile_image, :fill, 60, 60, class:"pull-left profile-thumb", fallback: "no_image.jpg" %>
					</td>
					<td><%= user.name %></td>
					<td>フォロー数: <%= user.follower.count %></td>
					<td>フォロワー数: <%= user.followed.count %></td>
					<td><%= link_to "Show", user_path(user) %></td>
				</tr>
				<% end %>
			</tbody>
	</table>
	<% else %>
	<div>ユーザーはいません</div>
<% end %>